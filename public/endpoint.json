{
  "name": "jirafe_endpoint",
  "display": "Jirafe",
  "description": "Jirafe Analytics Endpoint",
  "help": "https://github.com/spree/jirafe_endpoint",
  "icon_url": "jirafe.png",
  "services": [
    {
      "name": "import_carts",
      "path": "/import_carts",
      "description": "Sync uncompleted orders to Jirafe as carts",
      "requires": {
        "parameters": [
          {
            "name": "site_id",
            "description": "Jirafe Site ID",
            "data_type": "string",
            "optional": false
          },
          {
            "name": "access_token",
            "description": "Jirafe OAuth Access Token",
            "data_type": "password",
            "optional": false
          }
        ]
      },
      "recommends": {
        "messages": ["cart:new", "cart:updated"]
        "options": {
          "retries_allowed": true
        }
      }
    },
    {
      "name": "import_new_orders",
      "path": "/import_new_orders",
      "description": "Sync new orders to Jirafe",
      "requires": {
        "parameters": [
          {
            "name": "site_id",
            "description": "Jirafe Site ID",
            "data_type": "string",
            "optional": false
          },
          {
            "name": "access_token",
            "description": "Jirafe OAuth Access Token",
            "data_type": "password",
            "optional": false
          }
        ]
      },
      "recommends": {
        "messages": ["order:new"]
        "options": {
          "retries_allowed": true
        }
      }
    },
    {
      "name": "import_updated_orders",
      "path": "/import_updated_orders",
      "description": "Sync updated orders to Jirafe",
      "requires": {
        "parameters": [
          {
            "name": "site_id",
            "description": "Jirafe Site ID",
            "data_type": "string",
            "optional": false
          },
          {
            "name": "access_token",
            "description": "Jirafe OAuth Access Token",
            "data_type": "password",
            "optional": false
          }
        ]
      },
      "recommends": {
        "messages": ["order:update"]
        "options": {
          "retries_allowed": true
        }
      }
    },
    {
      "name": "import_categories",
      "path": "/import_categories",
      "description": "Sync taxonomies to Jirafe as product categories",
      "requires": {
        "parameters": [
          {
            "name": "site_id",
            "description": "Jirafe Site ID",
            "data_type": "string",
            "optional": false
          },
          {
            "name": "access_token",
            "description": "Jirafe OAuth Access Token",
            "data_type": "password",
            "optional": false
          },
          {
            "name": "product_category_taxonomy",
            "description": "The ID of the parent Taxonomy whose taxons are to be synced.",
            "data_type": "string",
            "optional": false
          }
        ]
      },
      "recommends": {
        "messages": ["taxon:new", "taxon:updated"]
        "options": {
          "retries_allowed": true
        }
      }
    }
  ]
}
